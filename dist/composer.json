{
    "name": "anvil/starter",
    "description": "A starter structure for Slim",
    "keywords": ["framework", "slim", "anvil"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "slim/slim": "^3.8",
        "symfony/var-dumper": "^3.2",
        "vlucas/phpdotenv": "^2.4",
        "slim/flash": "^0.2.0",
        "slim/csrf": "^0.8.1",
        "symfony/yaml": "^3.3",
        "swiftmailer/swiftmailer": "^6.0",
        "phpmailer/phpmailer": "^5.2",
        "slim/twig-view": "1.*",
        "thepixeldeveloper/sitemap": "^4.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
